{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | The Categories
{% endblock %}

{% block body %}
    <h1>The {{ parent() }} Categories</h1>

    <div class="categories-list">
        <ul>
            {% for cat in allCategories %}
                <li>
                    <a href="{{ path('wish_listCategory', {'categoryId' : cat.id}) }}">{{ cat.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}